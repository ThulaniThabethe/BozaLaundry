@model WebApplication1.Models.ReportViewModel

@{
    ViewBag.Title = "Reports";
}

<h2>Reports</h2>

<div>
    <h3>Order Trends</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Number of Orders</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model.OrderTrends)
            {
                <tr>
                    <td>@entry.Key.ToShortDateString()</td>
                    <td>@entry.Value</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <h3>Customer Retention</h3>
    <p>Customer Retention Rate: <strong>@Model.CustomerRetentionRate.ToString("F2")%</strong></p>
</div>

<div class="row">
    <div class="col-md-6">
        <h3>每日收入报告</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>日期</th>
                    <th>总收入</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.RevenueReport.DailyRevenues)
                {
                    <tr>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>@item.TotalRevenue.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <h3>每周收入报告</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>年份</th>
                    <th>周数</th>
                    <th>总收入</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.RevenueReport.WeeklyRevenues)
                {
                    <tr>
                        <td>@item.Year</td>
                        <td>@item.WeekNumber</td>
                        <td>@item.TotalRevenue.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>