@model IEnumerable<WebApplication1.Models.ServiceType>

@{
    ViewBag.Title = "Service Types";
}

<h2>Service Types</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PricePerUnit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ServiceTypeId })
            @Html.ActionLink("Details", "Details", new { id=item.ServiceTypeId })
            @Html.ActionLink("Delete", "Delete", new { id=item.ServiceTypeId })
        </td>
    </tr>
}

</table>
</div>